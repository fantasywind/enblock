.enblock
  padding 10px 6px
  border 1px solid #CCC
  margin 6px 0
.enblock-toolbar
  margin 0 6px
.enblock-content
  margin 18px 6px 6px 6px
  background-color #FAFAFA
  border 1px solid #F0F0F0
  padding 12px 8px
  outline none
  font-size 14pt
.enblock-element
  padding 3px 8px
.enblock-paragraph
  &:hover
    border 1px solid #08C
    border-radius 4px
    background-color #ECF5FF
  p
    display inline-block
    margin 0
.enblock-block-tag
  font-size 10.5pt
  display inline-block
  margin 0 8px 4px 0
  background-color #DFDFDF
  border 1px solid #AAA
  border-radius 2px
  padding 2px 6px
  line-height 14pt