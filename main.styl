SELECTED_BACKGROUND = #ECF5FF
SELECTED_BORDER_COLOR = #08C
SELECTED_TAG_BACKGROUND = desaturate(lighten(#f1c40f, 70%), 10%)
TOOLBAR_BORDER_COLOR = #34495e
PARAGRAPH_COLOR = #666

.enblock
  padding 10px 6px
  border 1px solid #CCC
  margin 6px 0
.enblock-toolbar
  margin 0 6px
.enblock-content
  margin 18px 6px 6px 6px
  background-color #FAFAFA
  border 1px solid #F0F0F0
  padding 12px 8px
  outline none
  font-size 14pt
.enblock-element
  padding 3px 8px

.enblock-child
  margin 3px 0
  border 1px solid transparent
  &:hover
    border-color SELECTED_BORDER_COLOR
    background-color SELECTED_BACKGROUND

// Element Tag
.enblock-block-tag
  font-size 10.5pt
  display inline-block
  margin 2px 8px 4px 0
  background-color #DFDFDF
  border 1px solid #AAA
  border-radius 2px
  padding 2px 6px
  line-height 14pt

// Selected
.enblock-selected
  background-color lighten(SELECTED_BACKGROUND, 20%)
  border-color lighten(SELECTED_BORDER_COLOR, 30%)
  .enblock-block-tag
    background-color SELECTED_TAG_BACKGROUND
    border-color darken(SELECTED_TAG_BACKGROUND, 30%)

  &.enblock-paragraph
    p
      color #222

// Paragraph
.enblock-paragraph
  p
    margin 0
    color PARAGRAPH_COLOR
    outline none
    transition color 0.12s linear

.enblock-paragraph-toolbar
  position absolute
  background-color #F5F5F5
  border 1px solid TOOLBAR_BORDER_COLOR
  > .enblock-paragraph-toolbutton
    width 32px
    height 26px
    font-size 16px
    text-align center
    background transparent
    border 0
    color #333
    outline none
    border-right 1px solid TOOLBAR_BORDER_COLOR
    &:last-child
      border-right 0
    &:hover
      background-color #E3E3E3
      color #222
    &:active
      background-color #DDD
.enblock-paragraph-colorpicker
  display block
  padding 0
  height 20px
  position absolute
.enblock-paragraph-colorpicker-box
  margin 0
  display inline-block
  width 20px
  height 18px
  border 0
  background-color transparent
  outline none

// Gallery
.enblock-gallery-description-wrap
  &.square
    width 100%
    max-height 42px
    position absolute
    bottom 0
    background-color rgba(0, 0, 0, 0.7)
    transition max-height 0.6s ease-out

.enblock-gallery-description
  &.square
    color #FCFCFC
    margin 4px 8px
    font-size 10pt
  &.single
    color #777
    margin 6px 8px 8px 8px
    font-size 10pt

.enblock-gallery-image
  &.square
    width 200px
    height 200px
  &.single
    min-width 40%
    max-width 100%

.enblock-gallery-image-container
  &.square
    display inline-block
    margin 7px
    position relative
    overflow hidden
    &:hover
      .enblock-gallery-description-wrap
        max-height 100%
  &.single
    display block
    text-align center

.enblock-gallery-toolbar
  float right

.enblock-gallery-toolbar-button
  background-color transparent
  border 1px solid #AAA
  margin 0 3px
  font-size 10pt
  padding 4px 6px 2px 6px
  outline none
  &:hover
    background-color #777
    color #FFF
  &.active
    background-color #555
    color #FCFCFC